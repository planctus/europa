/**
 * @file
 * DT Policy input install file.
 */

/**
 * Implements hook_install().
 */
function dt_STARTERKIT_DEFAULT_install() {
  // Apply info dt configuration to "Policy input" content type.
  $path = drupal_get_path('module', 'dt_STARTERKIT_DEFAULT') . '/dt_STARTERKIT.info';
  $info = drupal_parse_info_file($path);
  drupal_set_message(t('NextEuropa STARTERKIT_CONTENT_NAME %v feature is installed on your site.', array('%v' => $info['version'])));
}

/**
 * Implements hook_uninstall().
 */
function dt_STARTERKIT_DEFAULT_uninstall() {
  $path = drupal_get_path('module', 'dt_STARTERKIT_DEFAULT') . '/dt_STARTERKIT.info';
  $info = drupal_parse_info_file($path);
  drupal_set_message(t('NextEuropa STARTERKIT_CONTENT_NAME %v feature is uninstalled on your site.', array('%v' => $info['version'])));
}

