/**
 * @file
 * DT Policy input install file.
 */

/**
 * Implements hook_install().
 */
function dt_pri_policy_area_default_install() {
  // Apply info dt configuration to "Policy input" content type.
  $path = drupal_get_path('module', 'dt_pri_policy_area_default') . '/dt_pri_policy_area.info';
  $info = drupal_parse_info_file($path);
  drupal_set_message(t('NextEuropa priority_policy_area %v feature is installed on your site.', array('%v' => $info['version'])));
}

/**
 * Implements hook_uninstall().
 */
function dt_pri_policy_area_default_uninstall() {
  $path = drupal_get_path('module', 'dt_pri_policy_area_default') . '/dt_pri_policy_area.info';
  $info = drupal_parse_info_file($path);
  drupal_set_message(t('NextEuropa priority_policy_area %v feature is uninstalled on your site.', array('%v' => $info['version'])));
}

