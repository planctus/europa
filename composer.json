{
  "require": {
    "composer/composer": "1.0.*@dev",
    "drupal/drupal-extension": "~3.0",
    "phing/phing": "~2.9",
    "drush/drush": "~6.5",
    "drupal/phing-drush-task": "1.0",
    "pear/versioncontrol_svn": "~0.5.2"
  },
  "repositories": [
    {
      "type": "package",
      "package": {
        "name": "drupal/phing-drush-task",
        "version": "1.0",
        "source": {
          "url": "http://git.drupal.org/project/phingdrushtask.git",
          "type": "git",
          "reference": "7.x-1.0"
        },
        "autoload": {
            "classmap": [
                "DrushTask.php"
            ]
        },
        "include-path": [
            "."
        ]
      }
    }
  ],
  "config": {
    "bin-dir": "bin/"
  }
}
